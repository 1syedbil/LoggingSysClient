<Window x:Class="NetworkingA3Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkingA3Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button x:Name="startBtn" Content="Connect" HorizontalAlignment="Center" VerticalAlignment="Top" Height="27" Width="100" Click="startBtn_Click" Margin="0,237,0,0" Visibility="Hidden"/>
        <TextBox x:Name="ipInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="144" Height="30" TextAlignment="Center" FontSize="15" Visibility="Hidden"/>
        <Label x:Name="ipInputLabel" Content="Enter an IP Address" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" FontSize="20" Visibility="Hidden"/>
        <Label x:Name="testePageLabel" Content="Select a Test to Run" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="25" Visibility="Hidden"/>
        <Button x:Name="debugBtn" Content="Debug Message Test" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.475,-0.506" Height="39" Width="180" FontSize="15" Visibility="Hidden" Click="debugBtn_Click"/>
        <Button x:Name="edgeCaseBtn" Content="Edge Case Test" HorizontalAlignment="Center" Margin="0,132,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="15" Visibility="Hidden" Click="edgeCaseBtn_Click"/>
        <Button x:Name="errorBtn" Content="Error Test" HorizontalAlignment="Center" Margin="0,176,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="15" Visibility="Hidden" Click="errorBtn_Click"/>
        <Button x:Name="fatalBtn" Content="Fatal Test" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="15" Visibility="Hidden" Click="fatalBtn_Click"/>
        <Button x:Name="rateLimiterBtn" Content="Rate Limiter Test" HorizontalAlignment="Center" Margin="0,264,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="15" Visibility="Hidden" Click="rateLimiterBtn_Click"/>
        <Label x:Name="msgInputLabel" Content="Enter a message" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="25" Visibility="Hidden"/>
        <TextBox x:Name="msgInput" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="316" Height="282" Visibility="Hidden" Margin="0,58,0,0"/>
        <Button x:Name="sendMsgBtn" Content="Send Message" HorizontalAlignment="Center" Margin="0,353,0,0" VerticalAlignment="Top" Height="39" Width="180" FontSize="15" Click="sendMsgBtn_Click" Visibility="Hidden"/>
        <Button x:Name="backBtn" Content="Go Back" HorizontalAlignment="Left" Margin="18,22,0,0" VerticalAlignment="Top" Height="21" Width="71" Visibility="Hidden" Click="backBtn_Click"/> 

    </Grid>
</Window>
